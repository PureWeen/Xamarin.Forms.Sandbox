    <FlyoutItem Title="Home Page">
        <ShellContent Route="HomePage" ContentTemplate="{DataTemplate local:HomePage}">
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Account">
        <Tab Title="Details" Route="Details">
            <ShellContent ContentTemplate="{DataTemplate local:AccountDetails}"></ShellContent>
        </Tab>
        <Tab Title="Settings" Route="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:AccountSettings}"></ShellContent>
        </Tab>
    </FlyoutItem>
    <TabBar Title="Some Uri Page">
        <Tab Title="Welcome" Route="Page">
            <ShellContent ContentTemplate="{DataTemplate local:DeepLinkedPage}">
            </ShellContent>
        </Tab>
        <Tab Title="To The">
            <ShellContent ContentTemplate="{DataTemplate local:DeepLinkedPage}">
            </ShellContent>
        </Tab>
        <Tab Title="Deep">
            <ShellContent ContentTemplate="{DataTemplate local:DeepLinkedPage}">
            </ShellContent>
        </Tab>
    </TabBar>
    <MenuItem Text="https://dotnetconf.net/Page?Id=12" Command="{Binding OpenUrlCommand}">
    </MenuItem>
</Shell>